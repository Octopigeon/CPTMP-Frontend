.team-wrapper
  height 100vh
  text-align center

  .team-avatar
    margin-top 15vh
    text-align center

    @media (max-width 599px)
      margin-top 5vh

    .team-img
      height 256px
      width 256px
      border-radius 50%

  .member-block
    margin-top 20px
    display flex
    justify-content center

    .member-avatar
      margin-right 10px

      .member-img
        height 64px
        width 64px
        border-radius 50%

    .member-info
      color white
      text-align left

      .name
        margin 0
        line-height 36px
        font-size 20px
        font-weight 500

      .username
        margin 0
        line-height 28px
        font-size 14px
        color #eee

.info
  margin-top 20px
  color white
  font-weight 700
  font-size 36px
  line-height 1.8
  text-shadow: 0.02em 0.02em 0.05em #999999

.action
  max-width 600px
  text-align center
  margin auto

  button
    margin 50px
    height 48px
    width 120px
    font-size 18px

    @media (max-width 599px)
      margin 5px
