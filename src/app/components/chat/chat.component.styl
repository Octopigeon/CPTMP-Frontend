.chat-wrapper
  // TODO change to suitable width limitation
  max-width calc(80vw - 48px)
  width 600px
  margin-left 40px
  margin-bottom 20px

.chat-list
  height 500px
  max-height 80vh
  overflow-y auto
  overflow-x hidden
  background-color #f7f7f7
  display flex
  flex-direction column
  scroll-behavior smooth

.send-button
  transition color 0.2s

#chat-input-container
  width 100%
