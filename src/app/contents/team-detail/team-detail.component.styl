.float-operation
  float right

  button, a
    margin-left 10px

.project-info
  margin 20px

  .project-id
    margin-left 5px

.wide-form-input
  width 400px;
  max-width 80vw;

.full-form-input
  width 100%

.edit-button
  vertical-align middle

.resource-link
  color inherit
  text-decoration none

  .resource-item
    transition background 0.3s

    &:hover
      background #0000000a

.resource-action
  text-align right
  margin-top 10px

  @media (max-width 599px)
    margin-right 20px

  button, a
    margin-left 10px

.level-radio
  margin 0 5px

.team-title
  height 120px
  display flex
  flex-direction row

  .avatar-container
    height 120px
    width 120px
    margin 10px
    position relative

    .team-avatar
      height 100px
      width 100px
      border-radius 50%

    .avatar-overlay
      position absolute
      top 0
      left 0
      height 100px
      width 100px
      text-align center
      line-height 100px
      color white
      transition opacity 0.3s 0.3s
      background #0000007f
      border-radius 50%
      opacity 0
      cursor pointer

      &:hover
        opacity 1
        transition opacity 0.3s 0s

  .title-info-container
    margin 10px 10px 10px 0

    #team-name
      height 50px
      margin-bottom 10px

      .name-wrapper
        line-height 50px

    #team-repo
      margin-top 0

.chip-avatar
  width 24px
  height 24px
  margin-left -8px
  margin-right 2px
  border-radius 50%

.auto-complete-avatar
  width 30px
  height 30px
  margin 9px 0
  vertical-align top
  border-radius 50%

.member-chip
  width 100%
  margin-bottom 24px

.team-chip
  user-select none

.leader-chip
  background-color #03a9f4
  color white

  .send-button
    background-color #03a9f4
    color white
    margin-left 10px

