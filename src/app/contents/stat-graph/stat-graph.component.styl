.info-header
  margin 30px 0 20px
  text-align center

.content-wrapper
  position relative
  margin 20px 40px 40px
  overflow hidden

  @media (max-width 599px)
    margin 20px 0 40px

.field-list
  width 200px
  max-width 100%
  border solid 1px #ccc
  min-height 60px
  display block
  background white
  border-radius 4px
  overflow hidden
  position absolute
  top 0
  right 0

.field-box
  padding 20px 10px
  border-bottom solid 1px #ccc
  color rgba(0, 0, 0, 0.87)
  display flex
  flex-direction row
  align-items center
  justify-content space-between
  box-sizing border-box
  cursor move
  background white
  font-size 14px

.cdk-drag-preview
  box-sizing border-box
  border-radius 4px
  box-shadow 0 5px 5px -3px rgba(0, 0, 0, 0.2),
    0 8px 10px 1px rgba(0, 0, 0, 0.14),
    0 3px 14px 2px rgba(0, 0, 0, 0.12)

.cdk-drag-placeholder
  opacity 0

.cdk-drag-animating,
.field-list.cdk-drop-list-dragging .field-box:not(.cdk-drag-placeholder)
  transition transform 250ms cubic-bezier(0, 0, 0.2, 1)

.field-box:last-child
  border none

.commit-chart
  height 75vh
