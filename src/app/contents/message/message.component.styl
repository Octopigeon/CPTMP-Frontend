.info-header
  margin 30px 0 20px
  text-align center

.operations
  text-align right
  margin-right 40px

  @media (max-width 599px)
    margin-right 20px

  button
    margin-left 10px

.content-wrapper
  margin 20px 40px 40px

  @media (max-width 599px)
    margin 20px 20px 40px

.message-title
  .sender-container
    display flex
    align-items center
    position relative

    &::before
      content " "
      position absolute
      height 10px
      width 10px
      border-radius 50%
      top 2px
      left 24px
      transition background 0.3s

    .message-avatar
      height 36px
      width 36px
      border-radius 50%
      margin-right 5px

  &.unread .sender-container::before
    background red

.message-body
  word-break break-all

.mat-action-row a
  margin-right 10px
