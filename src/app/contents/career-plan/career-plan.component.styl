.info-header
  margin 30px 0 20px
  text-align center

.content-wrapper
  max-width 1024px
  width calc(100% - 80px)
  margin 20px auto 40px
  position relative
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center

  @media (max-width 599px)
    margin 20px auto 40px
    width calc(100% - 40px)

  .tech-panel
    width 100px
    margin 20px
    height 160px
    position relative
    transition 0.3s
    cursor pointer
    -webkit-tap-highlight-color transparent

    &:hover, &.chosen
      box-shadow 0 5px 5px -3px rgba(0, 0, 0, 0.2),0 8px 10px 1px rgba(0, 0, 0, 0.14),0 3px 14px 2px rgba(0, 0, 0, 0.12)

    &.chosen
      background #e1f5fe

    .tech-icon
      margin 20px 10px 0
      height 80px
      width 80px

      .icon-image
        height 80px
        width 80px
        object-fit contain

    .name-wrapper
      height 40px
      margin 10px 0
      display flex
      align-items center
      justify-content center

      p
        margin 0
        line-height 20px
        user-select none

    .tech-checker
      position absolute
      top -3px
      right 0


