.dialog-actions
  justify-content flex-end

.camera-wrapper
  max-width calc(80vw - 48px)
  width 600px
  max-height calc(80vh - 132px)
  height 600px
  position relative
  background #333

  .camera-preview
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center

  .camera-switch-button
    position absolute
    top 10px
    right 10px

  .camera-take-button
    position absolute
    bottom 10px
    left calc(50% - 28px)

  .hint
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background #0000007f
    color white
    display flex
    justify-content center
    align-items center
    font-size 24px
    padding 20px
    line-height 1.8em
    text-align center

    p
      word-break keep-all

  .error-hint
    color #f57979

  .processing-hint
    flex-direction column

    p
      margin-top 10px


